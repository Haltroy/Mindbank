<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Mindbank.App"
             xmlns:lang="clr-namespace:Mindbank.Lang"
             xmlns:dialogHostAvalonia="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             xmlns:rangeSlider="using:RangeSlider.Avalonia.Themes.Fluent"
             RequestedThemeVariant="Default">
    <Application.Styles>
        <StyleInclude Source="avares://FluentAvalonia.ProgressRing/Styling/Controls/ProgressRing.axaml" />
        <StyleInclude Source="avares://Avalonia.Controls.ColorPicker/Themes/Fluent/Fluent.xaml" />
        <rangeSlider:RangeSliderTheme />
        <FluentTheme />
        <dialogHostAvalonia:DialogHostStyles />
    </Application.Styles>
    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="/Assets/logo.ico" ToolTipText="Mindbank">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="{x:Static lang:Lang.ShowApp}" Click="ShowApp" />
                        <NativeMenuItem Header="{x:Static lang:Lang.ExitApp}" Click="ExitApp" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>
</Application>